pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        ECR_REPO = '528757819999.dkr.ecr.us-east-1.amazonaws.com/springboot-app'
        K8S_NAMESPACE = 'default'
        IMAGE_TAG = 'latest'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/yeluru/spring-petclinic.git'
            }
        }

        stage('SCA Security Scan') {
            steps {
                script {
                    sh '''
                    echo "▶️ Running Security Scan with Trivy..."

                    # Define Trivy installation path
                    export TRIVY_PATH="/tmp/trivy"

                    # Install Trivy if not already installed
                    if ! command -v $TRIVY_PATH &> /dev/null; then
                        curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /tmp
                    fi

                    # Run security scan
                    /tmp/trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_Credentials']]) {
                        sh '''
                        echo "▶️ Checking workspace structure..."
                        pwd
                        ls -l

                        # Ensure Dockerfile exists
                        if [ ! -f Dockerfile ]; then
                            echo "❌ ERROR: Dockerfile not found!"
                            exit 1
                        fi

                        # Login to AWS ECR
                        echo "▶️ Logging into AWS ECR..."
                        aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO

                        # Build Docker image
                        echo "▶️ Building Docker Image..."
                        docker build -t $ECR_REPO:$IMAGE_TAG .

                        # Push to ECR
                        echo "▶️ Pushing Docker Image to AWS ECR..."
                        docker push $ECR_REPO:$IMAGE_TAG

                        echo "✅ Docker image pushed successfully!"
                        '''
                    }
                }
            }
        }

        stage('Update Kubernetes Deployment') {
            steps {
                script {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_Credentials']]) {
                        sh '''
                        echo "▶️ Updating Kubernetes Deployment..."

                        # Apply Kubernetes configurations
                        echo "▶️ Applying Deployment YAML..."
                        kubectl apply -f deployment.yaml

                        echo "▶️ Applying Service YAML..."
                        kubectl apply -f service.yaml

                        # Update deployment image
                        echo "▶️ Updating Image in Deployment..."
                        kubectl set image deployment/springboot-app springboot-app=$ECR_REPO:$IMAGE_TAG -n $K8S_NAMESPACE

                        # Verify deployment rollout
                        echo "▶️ Verifying Deployment Rollout..."
                        kubectl rollout status deployment/springboot-app -n $K8S_NAMESPACE

                        echo "✅ Kubernetes deployment updated successfully!"
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed. Check logs!"
        }
    }
}

